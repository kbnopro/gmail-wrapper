model Message {
  id           String   @id
  internalDate DateTime
  subject      String
  snippet      String
  threadId     String
  ownerId      String
  receiver     String
  sender       String
  content      String
  owner        User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  messageId    String
  inReplyTo    String?
  references   String

  @@index([threadId])
}
